<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_weight="0.2"
    android:background="@color/black"
    tools:context=".Activity.Activity.DetailMusikActivity">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="10dp"
        android:backgroundTint="@color/blackgray"
        app:cardCornerRadius="20dp"
        app:cardElevation="8dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <!-- Top Bar -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:gravity="end"
                android:orientation="horizontal"
                android:paddingTop="19dp"
                android:paddingEnd="19dp">

                <!-- Back Button -->
                <ImageView
                    android:layout_width="34dp"
                    android:layout_height="match_parent"
                    android:layout_marginTop="2dp"
                    android:src="@drawable/down" />
            </LinearLayout>

            <!-- Album Cover -->

            <!-- Song Title -->

            <ImageView
                android:id="@+id/albumCoverImageView"
                android:layout_width="300dp"
                android:layout_height="300dp"
                android:layout_alignParentEnd="true"
                android:layout_marginTop="80dp"
                android:layout_marginEnd="33dp"/>

            <TextView
                android:id="@+id/songTitleTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/albumCoverImageView"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="100dp"
                android:text="Song Title"
                android:textColor="#FFF"
                android:textSize="24sp"
                android:textStyle="bold" />

            <!-- Song Artist -->

            <!-- Progress Bar -->

            <!-- Start TextView -->

            <TextView
                android:id="@+id/songArtistTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/songTitleTextView"
                android:layout_centerHorizontal="true"
                android:layout_marginStart="10dp"
                android:layout_marginTop="15dp"
                android:layout_marginEnd="10dp"
                android:text="Artist Name"
                android:textColor="#FFF"
                android:textSize="16sp" />

            <androidx.appcompat.widget.AppCompatSeekBar
                android:id="@+id/linearProgressBar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/songArtistTextView"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="20dp"
                android:progressTint="#4CAF50"
                android:thumb="@drawable/thumb"
                android:thumbTint="#4CAF50" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/linearProgressBar"
                android:layout_alignStart="@id/linearProgressBar"
                android:layout_marginStart="10dp"
                android:layout_marginTop="8dp"
                android:text="0:10"
                android:textColor="#FFF"
                android:textSize="14sp" />

            <!-- End TextView -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/linearProgressBar"
                android:layout_alignEnd="@id/linearProgressBar"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="10dp"
                android:text="4:00"
                android:textColor="#FFF"
                android:textSize="14sp" />

            <!-- Controls -->

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:orientation="horizontal"
                    android:padding="16dp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintVertical_bias="1.0">

                    <!-- Previous Button -->

                    <ImageView
                        android:layout_width="10dp"
                        android:layout_height="42dp"
                        android:layout_margin="-8dp"
                        android:layout_marginEnd="27dp"
                        android:layout_weight="0.2"
                        android:src="@drawable/play" />

                    <ImageView
                        android:layout_width="32dp"
                        android:layout_height="32dp"
                        android:layout_margin="8dp"
                        android:src="@drawable/previous" />

                    <!-- Play/Pause Button -->

                    <!-- Next Button -->
                    <ImageView
                        android:layout_width="55dp"
                        android:layout_height="55dp"
                        android:layout_margin="4dp"
                        android:src="@drawable/putar" />

                    <!-- Shuffle Button -->

                    <!-- Shuffle Button -->
                    <ImageView
                        android:layout_width="32dp"
                        android:layout_height="32dp"
                        android:layout_margin="4dp"
                        android:layout_marginEnd="30dp"
                        android:src="@drawable/next" />

                    <ImageView
                        android:layout_width="10dp"
                        android:layout_height="42dp"
                        android:layout_margin="-6dp"
                        android:layout_marginStart="29dp"
                        android:layout_weight="0.2"
                        android:src="@drawable/play" />

                    <!-- Repeat Button -->

                </LinearLayout>
            </androidx.constraintlayout.widget.ConstraintLayout>
        </RelativeLayout>
    </androidx.cardview.widget.CardView>
</LinearLayout>