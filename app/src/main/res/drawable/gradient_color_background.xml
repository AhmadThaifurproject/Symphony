<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Bagian pertama dari warna gradient pertama (kiri atas) -->
    <item>
        <shape>
            <gradient
                android:startColor="#993366"
                android:centerColor="#19191b"
                android:endColor="#19191b"
                android:centerX="0.1"
                android:centerY="0.1"
                android:type="radial"
                android:gradientRadius="150%p"/>
        </shape>
    </item>
    <!-- Gradient kedua (kanan bawah) -->
    <item>
        <shape>
            <gradient
                android:startColor="#339933"
                android:centerColor="@android:color/transparent"
                android:endColor="@android:color/transparent"
                android:centerX="0.9"
                android:centerY="0.5"
                android:type="radial"
                android:gradientRadius="140%p"/>
        </shape>
    </item>
    <!-- Gradient ketiga (kiri bawah) -->
    <item>
        <shape>
            <gradient
                android:startColor="#004080"
                android:centerColor="@android:color/transparent"
                android:endColor="@android:color/transparent"
                android:centerX="0.1"
                android:centerY="0.9"
                android:type="radial"
                android:gradientRadius="140%p"/>
        </shape>
    </item>
</layer-list>
